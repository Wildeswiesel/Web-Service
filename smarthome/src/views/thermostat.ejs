<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Thermostate</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <h1>Liste aller Thermostate</h1>

  <div id="thermostat-list"></div>

  <script>
    async function loadThermostats() {
      try {
        const response = await fetch('/thermostats');
        const thermostats = await response.json();

        let html = '';
        thermostats.forEach((t) => {
          html += `
            <div>
              <strong>Thermostat #${t.deviceid}:</strong>
              <br>DeviceID: ${t.deviceid}, Room: ${t.roomid || 'â€”'}
              <br>
              <button onclick="setNormal('${t.deviceid}')">Normal</button>
              <button onclick="setReduced('${t.deviceid}')">Absenk</button>
              <button onclick="getStatus('${t.deviceid}')">Status</button>
              <pre id="status_${t.deviceid}"></pre>
            </div>
            <hr>
          `;
        });
        document.getElementById('thermostat-list').innerHTML = html;
      } catch (err) {
        console.error('Fehler beim Laden der Thermostate', err);
      }
    }

    async function setNormal(deviceId) {
      try {
        const res = await fetch(`/thermostats/${deviceId}/normal`, { method: 'POST' });
        const data = await res.json();
        alert(`Normaltemperatur gesetzt:\n${JSON.stringify(data)}`);
      } catch (err) {
        alert('Fehler beim Setzen der Normaltemperatur');
      }
    }

    async function setReduced(deviceId) {
      try {
        const res = await fetch(`/thermostats/${deviceId}/reduced`, { method: 'POST' });
        const data = await res.json();
        alert(`Absenktemperatur gesetzt:\n${JSON.stringify(data)}`);
      } catch (err) {
        alert('Fehler beim Setzen der Absenktemperatur');
      }
    }

    async function getStatus(deviceId) {
      try {
        const res = await fetch(`/thermostats/${deviceId}/status`);
        const data = await res.json();
        document.getElementById(`status_${deviceId}`).textContent = JSON.stringify(data, null, 2);
      } catch (err) {
        alert('Fehler beim Abfragen des Status');
      }
    }

    // Beim Laden des Dokuments
    loadThermostats();
  </script>
</body>
</html>
