<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Thermostate</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <h1>Liste aller Thermostate</h1>

  <div id="thermostat-list"></div>

  <script>
    async function loadThermostats() {
      try {
        const response = await fetch('/thermostats');
        const thermostats = await response.json();

        let html = '';
        thermostats.forEach((t) => {
          html += `
            <div>
              <strong>Thermostat #${t.deviceid}:</strong>
              <br>DeviceID: ${t.deviceid}, Room: ${t.roomid || '—'}
              <br>
              <button onclick="getStatus('${t.deviceid}')">Status</button>
              <pre id="status_${t.deviceid}"></pre>
            </div>
            <hr>
          `;
        });
        document.getElementById('thermostat-list').innerHTML = html;
      } catch (err) {
        console.error('Fehler beim Laden der Thermostate', err);
      }
    }

    // man könnten den folgenden Endpunkt noch benutzen app.post('/update' mit den Feldern: currentTemp, roomTemp, reducedTemp, window ) 
    // aber eigentlich würde ich die thermostate einfach automatisch laufen lasen und diesen Endpunkt nur für die Fenster dann benutzen

    async function getStatus(deviceId) {
      try {
        const res = await fetch(`/thermostats/${deviceId}/status`);
        const data = await res.json();
        document.getElementById(`status_${deviceId}`).textContent = JSON.stringify(data, null, 2);
      } catch (err) {
        alert('Fehler beim Abfragen des Status');
      }
    }

    // Beim Laden des Dokuments
    loadThermostats();
  </script>
</body>
</html>
